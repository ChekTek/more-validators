{
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/src/**/*.test.ts"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "scripts": {
    "build": "tsc . && cp ./readme.md ./dist/",
    "test": "jest --collectCoverage",
    "watch": "jest --watchAll --expand --collectCoverage",
    "coverage": "jest --collectCoverage",
    "test:ci": "jest"
  },
  "dependencies": {
    "@angular/forms": "^9.1.1",
    "rxjs": "~6.5.5"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@angular/animations": "^9.1.1",
    "@angular/common": "^9.1.1",
    "@angular/compiler": "^9.1.1",
    "@angular/core": "^9.1.1",
    "@angular/platform-browser": "^9.1.1",
    "@types/node": "^13.11.1",
    "jest": "^25.3.0",
    "ts-jest": "^25.3.1",
    "typescript": "^3.8.3"
  }
}
